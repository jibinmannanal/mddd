        <th role="columnheader">Instructions</th>
        <th role="columnheader">Timing</th>
        <th role="columnheader">Rate</th>
        <th role="columnheader">Book</th>
      </tr>
    </thead>
    <tbody role="rowgroup">
        <%= render 'shared/feed' %>





    </tbody>
  </table>
  <% if @sevas.any? %>


    <%= will_paginate @sevas,
                      params: { controller: :static_pages, action: :home } %>
  <% end %>

</section>

